ARG BASE_IMAGE=8.0-cli-alpine3.16
FROM php:$BASE_IMAGE

COPY . /tmp/simdjson

# persistent / runtime deps
ENV PHPIZE_DEPS \
    autoconf \
    g++ \
    gcc \
    make \
    pkgconf \
    git \
    re2c

ENV REPORT_EXIT_STATUS=1

RUN set -xe \
    && apk add --no-cache --virtual .build-deps \
        $PHPIZE_DEPS \
    && cd /tmp/simdjson \
    && phpize  \
    && ./configure  \
    && make -j$(nproc)  \
    && make install \
    && make test \
    && rm -rf /tmp/simdjson \
    && echo "extension=simdjson.so" > /usr/local/etc/php/conf.d/simdjson.ini
